<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro"
    android:background="@color/light_green">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEncabezadoRegistro"
        android:layout_marginTop="30dp"
        android:text="Registro"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUsuario"
        android:layout_below="@+id/txtEncabezadoRegistro"
        android:text="Nombre de usuario*"
        android:textColor="#555555"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etUsuario"
        android:hint="Ingresa tu nombre de usuario"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:padding="6dp"
        android:layout_below="@+id/txtUsuario"
        android:background="@drawable/border"
        android:layout_marginHorizontal="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:layout_below="@+id/etUsuario"
        android:text="Email*"
        android:textColor="#555555"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEmail"
        android:hint="Ingresa tu email"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:padding="6dp"
        android:layout_below="@+id/txtEmail"
        android:background="@drawable/border"
        android:layout_marginHorizontal="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPhone"
        android:layout_below="@+id/etEmail"
        android:text="No. Telefonico*"
        android:textColor="#555555"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPhone"
        android:hint="Digite su numero telefonico"
        android:inputType="phone"
        android:textSize="16sp"
        android:padding="6dp"
        android:layout_below="@+id/txtPhone"
        android:background="@drawable/border"
        android:layout_marginHorizontal="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassword"
        android:layout_below="@+id/etPhone"
        android:text="Contrase単a*"
        android:textColor="#555555"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:hint="Crea una contrase単a"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:padding="6dp"
        android:layout_below="@+id/txtPassword"
        android:background="@drawable/border"
        android:layout_marginHorizontal="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtConfirmPassword"
        android:layout_below="@+id/etPassword"
        android:text="Confirmar contrase単a*"
        android:textColor="#555555"
        android:padding="6dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etConfirmPassword"
        android:hint="Confirma tu contrase単a"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:padding="6dp"
        android:layout_below="@+id/txtConfirmPassword"
        android:background="@drawable/border"
        android:layout_marginHorizontal="25dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEnviar"
        android:layout_below="@+id/etConfirmPassword"
        android:text="Enviar"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/dark_green"/>

</RelativeLayout>