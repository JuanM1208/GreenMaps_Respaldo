<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/aguaAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/frameAgua"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:background="@color/pastel_blue"
            android:padding="10dp">

            <TextView
                android:id="@+id/ph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="pH"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/numPh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ph"
                android:text="0.0"
                android:textSize="40sp"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cuerpoAgua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuerpo de agua"
                android:textSize="30sp"
                android:padding="10dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cuerpoAgua"
                android:text="Last Updated: "
                android:textSize="10sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/et_updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cuerpoAgua"
                android:layout_toEndOf="@+id/updates"
                android:text="-"
                android:textSize="10sp"
                android:padding="0dp"
                android:background="@color/light_blue"/>

        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_below="@+id/aguaAppbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contaminantes"
            android:text="VARIABLES MEDIDAS"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contaminantes"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dureza"
                android:layout_marginTop="15dp"
                android:text="Dureza:"
                android:textSize="25sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_dureza"
                android:layout_marginTop="15dp"
                android:layout_marginStart="150dp"
                android:textSize="25sp"
                android:text="Mant."
                android:padding="0dp"
                android:background="@color/white"
                android:gravity=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coliformes"
                android:layout_below="@+id/dureza"
                android:layout_marginTop="5dp"
                android:text="Coliformes:"
                android:textSize="25sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_coliformes"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/dureza"
                android:layout_marginStart="150dp"
                android:textSize="25sp"
                android:text="Mant."
                android:padding="0dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/solidos"
                android:layout_below="@+id/coliformes"
                android:layout_marginTop="5dp"
                android:text="SÃ³lidos:"
                android:textSize="25sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_solidos"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/coliformes"
                android:layout_marginStart="150dp"
                android:textSize="25sp"
                android:text="Mant."
                android:padding="0dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sulfatos"
                android:layout_below="@+id/solidos"
                android:layout_marginTop="5dp"
                android:text="Sulfatos:"
                android:textSize="25sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_sulfatos"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/solidos"
                android:layout_marginStart="150dp"
                android:textSize="25sp"
                android:text="Mant."
                android:padding="0dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mercurio"
                android:layout_below="@+id/sulfatos"
                android:layout_marginTop="5dp"
                android:text="Mercurio:"
                android:textSize="25sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_mercurio"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/sulfatos"
                android:layout_marginStart="150dp"
                android:textSize="25sp"
                android:text="Mant."
                android:padding="0dp"
                android:background="@color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/turbiedad"
                android:layout_below="@+id/mercurio"
                android:layout_marginTop="5dp"
                android:text="Turbiedad:"
                android:textSize="25sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_turbiedad"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/mercurio"
                android:layout_marginStart="150dp"
                android:textSize="25sp"
                android:text="Mant."
                android:padding="0dp"
                android:background="@color/white"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>